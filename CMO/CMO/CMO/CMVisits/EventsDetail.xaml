<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CMO.CMVisits.EventsDetail"
             BackgroundColor="#FFFFFF"
              Padding="10"
                xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms">

    <Grid VerticalOptions="FillAndExpand" BackgroundColor="#F7F7F7" Padding="5,5,5,5" >
		 <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
        </Grid.RowDefinitions>
		  <StackLayout Grid.Row="0" >
 			<Grid >
        <ffimageloading:CachedImage x:Name="EventsDetailImageBackgrnd" Source="photogalleryplaceholder.png" Aspect="Fill"/>
        <ffimageloading:CachedImage x:Name="EventsDetailImage" Aspect="Fill"/>
    </Grid>
			<Label x:Name="EventsVisittitle" TextColor="#f47421" FontAttributes="Bold"/>
			<StackLayout Orientation="Horizontal">
        <Image Source="ico_calendar.png" />
      	   		<Label x:Name="EventsVisitDate" TextColor="#484848" />
 	     	</StackLayout>
          </StackLayout> 
          <StackLayout BackgroundColor="#F7F7F7" Padding="0,5,0,5"  VerticalOptions="FillAndExpand" Grid.Row="1" >
      		 <ScrollView>
      		  <StackLayout >
       		   <Label x:Name="EventsVisitDetail" TextColor="#484848" LineBreakMode="CharacterWrap"  />
       		</StackLayout>
   		   </ScrollView>
				
  		  </StackLayout>

    </Grid>
</ContentPage>