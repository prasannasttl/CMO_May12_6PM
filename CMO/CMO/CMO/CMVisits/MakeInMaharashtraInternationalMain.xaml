            <Entry HeightRequest="35" WidthRequest="35" x:Name="FilterMahrashtraVisitGoesInternationalList" TextColor="#09091a" BackgroundColor="White" VerticalOptions="Center" />
          </StackLayout>
          <StackLayout Padding="1,0,1,0" Grid.Column="1">
